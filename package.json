{
  "name": "ezviz-camera-platform",
  "version": "1.0.0",
  "description": "Professional EZVIZ camera monitoring platform",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
